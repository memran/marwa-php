#!/usr/bin/env php
<?php

declare(strict_types=1);
if (PHP_SAPI != 'cli') {
    die("Script must be run on cli");
}

//directory separator
defined('DS') or define('DS', DIRECTORY_SEPARATOR);

//directory for web root
defined('WEBROOT') or define('WEBROOT', dirname(__FILE__, 1));

//loading autoload
require_once WEBROOT . DS . 'vendor/autoload.php';


use Marwa\Framework\Application;
use Marwa\Framework\Console\ConsoleKernel;


$app = new Application(WEBROOT);
$app->boot();

/** @var ConsoleKernel $kernel */
$kernel = $app->make(ConsoleKernel::class);
exit($kernel->handle('Marwa Console', 'v0.1.0'));
