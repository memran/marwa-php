{
  "name": "memran/marwa-php",
  "description": "MarwaPHP - Lightweight MVC PHP Framework",
  "type": "project",
  "keywords": [
    "http",
    "psr-3",
    "psr-7",
    "psr-11",
    "psr-15",
    "psr-16",
    "framework",
    "Marwa",
    "marwaphp",
    "marwa framework"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Mohammad Emran",
      "email": "memran.dhk@gmail.com"
    }
  ],
  "require": {
    "php": " >= 8.2",
    "ext-json": "*",
    "memran/marwa-framework": "dev-main"
  },
  "scripts": {
    "post-root-package-install": [
      "@php scripts/post-create-project.php --root-install"
    ],
    "post-create-project-cmd": [
      "@php scripts/post-create-project.php"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.x-dev"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  }
}
